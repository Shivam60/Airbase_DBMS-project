<Window x:Class="airbase.view_employee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:airbase"
        mc:Ignorable="d"
        Title="view_employee" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding LoadDataBinding}" IsSynchronizedWithCurrentItem="True" HorizontalAlignment="Left" Margin="0,35,0,0" VerticalAlignment="Top" Height="173" Width="292"/>
        <Button x:Name="button" Content="Back" HorizontalAlignment="Left" Margin="10,226,0,0" VerticalAlignment="Top" Width="81" Height="29" FontWeight="Bold" FontSize="18" Click="button_Click"/>
        <Button x:Name="button1" Content="Exit" HorizontalAlignment="Left" Margin="189,227,0,0" VerticalAlignment="Top" Width="75" FontWeight="Bold" FontSize="18" Click="button1_Click"/>
        <Label x:Name="label" Content="Employees" HorizontalAlignment="Center" Margin="81,0,87,0" VerticalAlignment="Top" Width="124" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
