<Window x:Class="airbase.Add_flight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:airbase"
        mc:Ignorable="d"
        Title="Add_flight" Height="397" Width="469"
        Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="label" Content="Add Flight Between Airports" HorizontalAlignment="Left" Margin="135,19,0,0" VerticalAlignment="Top" Width="261" FontWeight="Bold" FontSize="18"/>
        <ComboBox x:Name="comboBox" Text="Select Route ID" HorizontalAlignment="Left" Margin="4,82,0,0" VerticalAlignment="Top" Width="126" IsEditable="True" SelectionChanged="comboBox_SelectionChanged" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="label1" Content="Route Code" HorizontalAlignment="Left" Margin="20,109,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="label2" Content="Source Airport" HorizontalAlignment="Left" Margin="20,135,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.395,0" Width="95" FontWeight="Bold" FontSize="14">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-2.045"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="label3" Content="Destination Airport" HorizontalAlignment="Left" Margin="20,158,0,0" VerticalAlignment="Top" Width="115" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="label6" Content="Capacity" HorizontalAlignment="Left" Margin="230,135,0,0" VerticalAlignment="Top" Width="75" FontWeight="Bold" FontSize="14"/>
        <ComboBox x:Name="comboBox1" Text="Select Aircraft ID" HorizontalAlignment="Left" Margin="224,82,0,0" VerticalAlignment="Top" Width="126" IsEditable="True" SelectionChanged="comboBox1_SelectionChanged" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="label7" Content="Aircraft No" HorizontalAlignment="Left" Margin="230,109,0,0" VerticalAlignment="Top" Width="95" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="button" Content="Submit" HorizontalAlignment="Left" Margin="190,225,0,0" VerticalAlignment="Top" Width="75" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="button1" Content="Back" HorizontalAlignment="Left" Margin="20,263,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="label5" Content="Label" HorizontalAlignment="Left" Margin="135,109,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="label8" Content="Label" HorizontalAlignment="Left" Margin="135,132,0,0" VerticalAlignment="Top" Width="95"/>
        <Label x:Name="label9" Content="Label" HorizontalAlignment="Left" Margin="135,155,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="label10" Content="Label" HorizontalAlignment="Left" Margin="342,109,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.395,-0.077"/>
        <Label x:Name="label11" Content="Label" HorizontalAlignment="Left" Margin="342,132,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
